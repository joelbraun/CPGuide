                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="About" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>

            <Grid>
                <TextBlock Text="SplitView Basic" FontSize="54" Foreground="Black"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" Foreground="Black" FontSize="54"/>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
