                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="Events">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="MenuButton12" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="Events" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="Admissions">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="MenuButton13" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
