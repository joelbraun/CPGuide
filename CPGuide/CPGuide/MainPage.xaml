                            <Button x:Name="MenuButton15" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="Directory" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="UniversityStore">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="MenuButton16" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="University Store" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="CampusLife">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="MenuButton17" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="Campus Life" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="Library">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="MenuButton18" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="Library" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="PrintandCopy">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="MenuButton19" FontFamily="Segoe MDL2 Assets" Content="&#xE1D6;"
                        Width="50" Height="50" Background="Transparent" Click="Item2Click"/>
                            <TextBlock Text="Print and Copy" FontSize="18" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Padding="0" x:Name="MustangJobs">
